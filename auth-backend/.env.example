# DevQuery Backend Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# PostgreSQL Configuration (User Management Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devquery_users
DB_USER=postgres
DB_PASSWORD=password

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_CONNECTIONS_PER_USER_FREE=2
MAX_CONNECTIONS_PER_USER_PRO=10
MAX_CONNECTIONS_PER_USER_ENTERPRISE=50

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Admin Configuration
ADMIN_EMAIL=admin@devquery.com
ADMIN_PASSWORD=admin123

# Subscription Tiers
SUBSCRIPTION_FREE_QUERY_LIMIT=100
SUBSCRIPTION_PRO_QUERY_LIMIT=1000
SUBSCRIPTION_ENTERPRISE_QUERY_LIMIT=10000

# Database Connection Timeouts
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=60000

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=15
